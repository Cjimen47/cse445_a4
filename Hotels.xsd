<?xml version="1.0" encoding="utf-8"?>

<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
			xmlns="http://venus.sod.asu.edu/WSRepository/xml" 
			targetNamespace="http://venus.sod.asu.edu/WSRepository/xml" 
			elementFormDefault="qualified" 
			attributeFormDefault="unqualified">
	<xsd:element name="Hotels" type="HotelType"/>
	<xsd:complexType name="HotelType">
		<xsd:sequence>
			<xsd:element name="Hotel" type="HotelDetails" minOccurs="1" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="HotelDetails">
		<xsd:sequence>
			<xsd:element name="Name" type="xsd:string" minOccurs="1" maxOccurs="1"/>
			<xsd:element name="Phone" type="PhoneType" minOccurs="1" maxOccurs="unbounded"/>
			<xsd:element name="Address" type="AddressType" minOccurs="1" maxOccurs="1"/>
			<xsd:element name="Rating" type="xsd:float" minOccurs="0" maxOccurs="1"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:simpleType name="PhoneType">
		<xsd:restriction base="xsd:string">
			<xsd:pattern value="\d{3}\-\d{3}-\d{4}"/>
		</xsd:restriction>
	</xsd:simpleType>
	<xsd:complexType name="AddressType">
		<xsd:attribute name="Number" type="xsd:integer" use="required"/>
		<xsd:attribute name="Street" type="xsd:string" use="required"/>
		<xsd:attribute name="City" type="xsd:string" use="required"/>
		<xsd:attribute name="State" type="xsd:string" use="required"/>
		<xsd:attribute name="Zip" type="xsd:integer" use="required"/>
		<xsd:attribute name="NearstAirport" type="xsd:integer" use="required"/>
	</xsd:complexType>
	
</xsd:schema>
